<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="General">

        <EditTextPreference
            android:title="Notebook Title"
            android:summary="The title that will be used on the main actionbar."
            android:key="title"
            android:defaultValue="Notebook" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Colour">

        <CheckBoxPreference
            android:title="Dark Background"
            android:summary="Change background to dark?"
            android:key="background_color"
            android:defaultValue="false" />

    </PreferenceCategory>
</PreferenceScreen>